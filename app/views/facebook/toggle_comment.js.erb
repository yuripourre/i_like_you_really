<% if @relationship.comment? %>
   $(".comment[href$='<%= @relationship.facebook_user_id %>'] i").removeClass("icon-comments-alt").addClass("icon-comments");
<% else %>
    $(".comment[href$='<%= @relationship.facebook_user_id %>'] i").removeClass("icon-comments").addClass("icon-comments-alt");
<% end %>

$(".stats-container").html("<%= j(render(partial: "stats")) %>");
