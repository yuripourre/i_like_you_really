$default-border-bottom: 1px solid rgba(49,78,95,0.12);
$friend-box-hover-color: #7bdcf5;
$number-color:  #ee6768;
$darker-title: darken($friend-box-hover-color, 30);
$navbar-height: 70px;
$navbar-border-radius: 0;
$navbar-default-bg: #fff;
$navbar-default-link-color: darken($friend-box-hover-color, 30);
$navbar-default-link-hover-color: $friend-box-hover-color;

@import "twitter/bootstrap";
@import "social_buttons";
@import "font-awesome";
@import "mobile";

label {
    font-weight: normal;
}

h1, h2, h3, h4, h5, h6 {
    font-family: "Helvetica Neue", "Helvetica", "Arial", sans;
    font-weight: 100;
    text-transform: uppercase;
    letter-spacing: 0.04em;
}

body {
    font-family: "Helvetica Neue", "Helvetica", "Arial", sans;

    @media all and (min-width: 641px) {
        .navbar {
            border-bottom: $default-border-bottom;
            
            li > .btn {
                margin-top: 15px;
                margin-right: 10px;
            }

            .navbar-brand {
                margin-top: 5px;
                font-size: 1.8em;
            }
        }
    }
}

body.logged-out {
    .intro {
        background: url(<%= asset_path 'splash/diving.jpg' %>);
        background-size: cover;
        color: white;
    }

    .tagline {
        text-shadow: 0.1em 0.0em 0.5em black;
        margin-top: 120px;
        font-size: 4.0em;
        width: 650px;        
    }

    .navbar {
        margin-bottom: 0;
    }

    .news {
        height: 45px;
        border-bottom: $default-border-bottom;
        margin-bottom: 20px;
        line-height: 3em;
        
        p {
            float: left;

            width: 80%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        a {
            margin-left: 5px;
        }
    }

    .features {
        .feature-info {
            &.col-xs-12 {
                margin-bottom: 10px;
            }
        }
    }

    .intro {
        height: 450px;
    }
}

body.logged-in {
    .navbar {
        .user-avatar {
            width: 50px;
            height: 50px;
            border: solid 1px $friend-box-hover-color;
            margin-right: 10px;
        }
    }

    .box {
        box-shadow: 1px 1px 1px #e7e7e7;
        -webkit-box-shadow: 1px 1px 1px #e7e7e7;
        background-clip: padding-box;
        -webkit-background-clip: padding-box;
        background: #fafafa;

        .avatar {
            float: left;

            img {
                -webkit-border-radius: 3px;
                border-radius: 3px;
                margin-top: 10px;
                width: 60px;
                height: 60px;
            }
        }        
    }

    .wizard {
        .icon {
            color: $darker-title;
        }
    }

    .dashboard {
        .latest-peeps {
            margin-top: 2em;
            
            h2 {
                margin-bottom: 1em;
            }
        }

        .details {
            font-size: 0.8em;
        }

        .infographics {
            .datum {
                color: $darker-title;
                font-weight: 200;
                text-align: center;
                font-size: 2em;

                .number {
                    font-weight: 400;
                    color: $number-color;
                    font-size: 5em;
                }
            }
        }
    }
    
    .friends {
        margin-top: 20px;
        border-radius: 3px;
        -webkit-border-radius: 3px;
        
        .friend {
            width: 200px;
            height: 200px;
            background-size: 100% auto;
            color: white;
            text-shadow: 1px 1px 1px #000;
            font-weight: 200;
            text-transform: uppercase;
            float: left;

            .background {
                position: absolute;
                top: 0;
                left: 0;
                width: 200px;
                height: 200px;
            }

            .foreground {
                &:hover:before {
                    content: ' ';
                    position: absolute;
                    left: 0;
                    right: 0;
                    top: 0;
                    bottom: 0;
                    background-color: $friend-box-hover-color;
                    opacity: 0.5;
                }
                
                position: absolute;
                top: 0;
                left: 0;
                width: 200px;
                height: 200px;                
                z-index: 1;

                a {
                    color: white;
                    
                    &:hover {
                        color: $friend-box-hover-color;
                        text-decoration: none;
                    }
                }
                
                > * {
                    margin: 5px 5px;
                }

                .friend-name {
                    position: absolute;
                    bottom: 5px;
                    font-weight: 100;
                    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                    font-size: 1.2em;
                    letter-spacing: 0.05em;
                    text-shadow: 1px 1px 5px #000;                
                }

                .actions {
                    position: absolute;
                    right: 5px;
                    font-size: 2em;
                    
                    .check {
                        &:hover {
                            color: $friend-box-hover-color;
                        }
                    }
                    
                    input[type="checkbox"] {
                        display: none;
                    }
                }                
            }
        }
    }

    .activity {
        height: 200px;
        margin-bottom: 20px;

        .avatar {
            margin-left: 10px;
        }

        .content {
            position: relative;
            margin-left: 80px;
            padding-top: 10px;
            
            .friend-name {
                font-weight: 400;
            }

            .title {
                font-size: 0.8em;

                &.blue {
                    color: #6bb5c1;
                }
            }

            .activity-actions {
                font-size: 3em;
                color: darken(#eee, 10);

                .done {
                    color: #7ac17d;
                }
            }
        }
    }

    .stats {
        .you {
            width: 100%;
            opacity: 0.7;
        }

        .latest {
            margin-top: 20px;
            font-size: 1.5em;
            color: $darker-title;

            .happy {
                text-align: center;
                font-weight: 300;
                
                .count {
                    font-weight: 400;
                    color: $number-color;
                }
            }
        }
    }
}

a.like {
    text-decoration: none;
    &:hover{
        text-decoration: none;
    }
}

a.comment {
    text-decoration: none;
    &:hover{
        text-decoration: none;
    }
}


.users-home {
    margin-top: 10px;
    .user-home {
        float: left;
        width: 10%;
        .data {
            width: 80px;
            height: 100%;
            
            .avatar {
                img {
                    width: 100%;
                    height: 80px;
                }
            }                
        }
        
        .name {
            font-size: 0.9em;
        }
    }
}

.avatar-user-home {
  margin: 2px;
  float: left;
}

.avatars-wrapper {
  opacity: 0.8; 
  margin-bottom: 60px;
}

.footer-home {
  font-color: #C0C0C0;
  margin-bottom: 20px;
}

.align-menu{
  margin-top: 8px;
}
