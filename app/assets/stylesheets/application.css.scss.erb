@import "twitter/bootstrap";
@import "social_buttons";
@import "font-awesome";
@import "mobile";

@import url(http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400);

$navbar-height: 70px;
$default-border-bottom: 1px solid rgba(49,78,95,0.12);
$friend-box-hover-color: #7bdcf5;

h1, h2, h3, h4, h5, h6 {
    font-family: "Source Sans Pro", "Helvetica Neue", sans;
}

body {
    font-family: "Source Sans Pro", "Helvetica Neue", sans;

    @media all and (min-width: 641px) {
        .navbar {
            min-height: $navbar-height;
            border-bottom: $default-border-bottom;
            
            li > .btn {
                margin-top: 15px;
                margin-right: 10px;
            }

            .navbar-brand {
                margin-top: 5px;
                font-size: 1.8em;
            }
        }
    }
}

body.logged-out {
    .intro {
        background: url(<%= asset_path 'splash/diving.jpg' %>);
        background-size: cover;
        color: white;
    }

    .tagline {
        text-shadow: 0.1em 0.0em 0.5em black;
        margin-top: 120px;
        font-size: 4.0em;
        width: 650px;        
    }

    .navbar {
        margin-bottom: 0;
    }

    .news {
        height: 45px;
        border-bottom: $default-border-bottom;
        margin-bottom: 20px;
        line-height: 3em;
        
        p {
            float: left;

            width: 80%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        a {
            margin-left: 5px;
        }
    }

    .features {
        .feature-info {
            &.col-xs-12 {
                margin-bottom: 10px;
            }
        }
    }

    .intro {
        height: 450px;
    }
}

body.logged-in {
    .navbar {
        .user-avatar {
            width: 50px;
            height: 50px;
            margin-right: 10px;
            margin-top: 10px;
            border: solid 1px $friend-box-hover-color;
        }
    }
    
    .friends {
        margin-top: 20px;
        .friend {
            float: left;
            margin-bottom: 30px;

            > * {
                margin: 5px 5px;
            }

            .data {
                width: 80px;
                height: 100%;
                
                .avatar {
                    img {
                        width: 100%;
                        height: 80px;
                    }
                }                
            }
            
            .name {
                font-size: 0.9em;
            }

            .actions {
                font-size: 3em;
                
                .check {
                    color: $friend-box-hover-color;
                    
                    &:hover {
                        color: yellow;
                    }
                }
                
                input[type="checkbox"] {
                    display: none;
                }
            }
        }
    }

    .stats {
        .you {
            width: 100%;
            opacity: 0.7;
        }

        .latest {
            margin-top: 20px;
            font-size: 1.5em;
            color: darken($friend-box-hover-color, 30);

            .happy {
                text-align: center;
                font-weight: 300;
                
                .count {
                    font-weight: 400;
                    color: #ee6768;
                }
            }
        }
    }
}

a.like {
    text-decoration: none;
    &:hover{
        text-decoration: none;
    }
}

a.comment {
    text-decoration: none;
    &:hover{
        text-decoration: none;
    }
}



